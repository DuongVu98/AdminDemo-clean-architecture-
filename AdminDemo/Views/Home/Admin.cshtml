@model object

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/js/site.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular-resource.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular-route.min.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

    @* add script *@
    <script src="~/app/app.module.js"></script>
    <script src="~/app/transactions/transaction.controller.js"></script>

    <script src="~/app/services/service.module.js"></script>
    <script src="~/app/services/transaction.service.js"></script>

    <script src="~/app/routes/app.route.js"></script>
    
    <link rel="stylesheet" href="~/css/transaction.css"/>
    <title>Hello Admin</title>
</head>
<body>

<div ng-app="admin" class="ui container">
    <h2 class="ui header">Transactions</h2>
    <div ng-controller="transactionController as vm">
        <table class="ui inverted green table" align="center">
            <tr>
                <th>Transaction ID</th>
                <th>User</th>
                <th>Full name</th>
                <th>Hash</th>
                <th>Address</th>
                <th>Country</th>
            </tr>
            <tr ng-repeat="transaction in vm.transactions">
                <td>{{transaction.id}}</td>
                <td>{{transaction.user.username}}</td>
                <td>{{transaction.user.lastName}} {{transaction.user.firstName}}</td>
                <td>{{transaction.hash}}</td>
                <td>{{transaction.address}}</td>
                <td>{{transaction.country.countryName}}</td>
            </tr>
        </table>
    </div>
    <a href="#!route">route</a>
    <div ng-view></div>
</div>
</body>
</html>